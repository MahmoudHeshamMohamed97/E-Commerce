@using static Project.Controllers.ProductsController
@model Product
@{
    ViewData["Title"] = "Add Proudect";
    Layout = "_Layout";
}

<style>
    .form-control {
        background-color: #eee;
        border: none;
        padding: 12px 15px;
        margin: 8px 0;
        width: 70%;
        height: 35px;
        border-radius: 20px;
        transition: 0.2s ease-in;
    }
</style>
@if (@TempData["Added"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Your new Category Added successfully</strong>.
    </div>
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Add Proudect</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="~/Home/Index">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="~/Products/Index">Product</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="container">
                    <div class="card-header border-0">
                        <h3 class="mb-0">Add Product</h3>
                    </div>

                    <fieldset class="mb-3">
                        <legend>Add New Category</legend>
                        <form asp-action="CreateCategory" method="post" class="form-inline">
                            <input type="text" asp-for="Category.Name" required placeholder="Category Name" class="form-control mr-3" />
                            <button type="submit" class="btn btn-outline-primary">Add Category</button>
                        </form>
                    </fieldset>

                    <form method="post" asp-action="Create" >
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" placeholder="Product Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <input type="tel" asp-for="Price" placeholder="Product Price" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Weight">Weight</label>
                            <input type="tel" asp-for="Weight" placeholder="Product Weight" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Discount">Discount</label>
                            <input type="tel" asp-for="Discount" placeholder="Product Discount" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea asp-for="Description" placeholder="Product Description" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock">Number in Stock</label>
                            <input type="number" asp-for="Stock" placeholder="Product Number in Stock" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Image">Put Link of the Image</label>
                            <input type="text" asp-for="Image" placeholder="Link of Product Image" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="brand">Brand</label>
                            <input type="text" asp-for="brand" placeholder="Brand" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Material">Material</label>
                            <input type="text" asp-for="Material" placeholder="Material" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Create_Date">Date</label>
                            <input type="date" asp-for="Create_Date" value="@Model.ChangeDateFormat(DateTime.Now)"
                                   max="@Model.ChangeDateFormat(DateTime.Now)" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Category.Name">Category</label>
                            <select asp-for="Category_Id" style="height: 35px" class="form-control">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }

                            </select>
                        </div>

                        <button class="btn btn-primary text-center " type="submit">ADD Product</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>