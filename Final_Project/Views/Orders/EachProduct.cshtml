@{
    ViewData["Title"] = "EachProduct";
    Layout = "_Layout";
}


<h2 class="text-center">@ViewBag.CustomerName Products</h2>

<div class="container d-flex justify-content-center">

    <div class="card w-50">

        <div class="card-body">

            @foreach (var item in ViewBag.allProducts)
            {
            <div class="py-2 my-2 text-center" style="border: 1px solid black">
                <img src="@item.Product.Image"
                     class="card-img-top img-fluid" alt="Product Image">

                <h4 class="card-title">@item.Product.Name</h4>
                <p class="card-text">Quantity: @item.Quantity</p>
                <p class="card-text">Color: @item.Color</p>
                <p class="card-text">Size: @item.Size</p>
            </div>
            }

        </div>
        @*<div class="x">X</div>*@

    </div>

</div>